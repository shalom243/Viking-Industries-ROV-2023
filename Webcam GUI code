import tkinter as tk
import cv2
import PIL.Image, PIL.ImageTk

class App:
    def __init__(self, window, window_title):
        self.window = window
        self.window.title(window_title)
        self.cap = cv2.VideoCapture(0) # Open the default camera
        self.width = self.cap.get(cv2.CAP_PROP_FRAME_WIDTH)
        self.height = self.cap.get(cv2.CAP_PROP_FRAME_HEIGHT)
        self.canvas = tk.Canvas(window, width = self.width, height = self.height)
        self.canvas.pack()

        # Create a button that will close the window when clicked
        self.close_button = tk.Button(window, text = "Close", command = self.close)
        self.close_button.pack(anchor=tk.CENTER, expand=True)

        self.delay = 15 # Delay between displaying each frame in milliseconds
        self.update()

        self.window.mainloop()

    def update(self):
        ret, frame = self.cap.read()

        if ret:
            self.photo = PIL.ImageTk.PhotoImage(image = PIL.Image.fromarray(frame))
            self.canvas.create_image(0, 0, image = self.photo, anchor = tk.NW)

        self.window.after(self.delay, self.update)

    def close(self):
        self.cap.release()
        self.window.destroy()

App(tk.Tk(), "USB Webcam Footage") # Create the application instance
